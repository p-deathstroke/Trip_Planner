<main>
    <nav class="navbar navbar-light bg-light border-bottom border-1 border-dark">
        <div class="container-fluid">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="/trips" class="btn">
                        <button type="button" name="back_button" id="back_button" class="btn">
                            <img src="/public/images/back_button.png" alt="back_button">
                        </button>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav mx-auto">
                <li class="nav-item"><h1 class="center">New Trip</h1></li>
            </ul>
        </div>
    </nav>
    <br>
    <center>
        <form action="/trips" method="POST">
            <label>
                Destination:
                <input type="text" id="destination" name="destination" placeholder="Ex: Rome" class="form-control">
            </label>
            <br><br>
            <label>
                Start Date:
                <input type="date" id="start_date" name="start_date" value="{{today}}" class="form-control">
            </label>
            <br><br>
            <label>
                End Date:
                <input type="date" id="end_date" name="end_date" value="{{tomorrow}}" class="form-control">
            </label>
            {{#if error}}
            <p class="error">{{error}}</p>
            {{/if}}
    </center>
</main>
        <footer class="footer mt-auto py-3 bg-primary">
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg mx-2">Create New Trip</button>
            </div>
        </footer>
    </form>
